<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    app:layout_constraintCircleRadius="@drawable/custom_layout"
    android:id="@+id/bottonSheets"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="false"
    app:cardCornerRadius="@dimen/_10sdp"
    >
        <TextView
            android:id="@+id/toioday"
            android:layout_marginTop="@dimen/_20sdp"
            android:textColor="#070707"
            android:textSize="@dimen/_20sdp"
            android:gravity="center"
            android:text="Tôi ở đây để?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RelativeLayout

            android:layout_below="@id/toioday"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_210sdp">

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:weightSum="4"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/radioOne"
                    android:textSize="@dimen/_14sdp"
                    android:layout_weight="1"
                    android:text="Tìm bạn mới"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>

                <RadioButton

                    android:id="@+id/radioTwo"
                    android:textSize="@dimen/_14sdp"
                    android:layout_weight="1"
                    android:text="Để chát"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>

                <RadioButton

                    android:id="@+id/radioThree"
                    android:textSize="@dimen/_14sdp"
                    android:layout_weight="1"
                    android:text="Tìm một người bạn thân"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>

                <RadioButton

                    android:id="@+id/radioFour"
                    android:textSize="@dimen/_14sdp"
                    android:layout_weight="1"
                    android:text="Tìm kiếm một mối quan hệ nghiêm túc"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>

            </RadioGroup>

        </RelativeLayout>
    </RelativeLayout>

