<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="5"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_mess"
            android:layout_width="50dp"
            android:layout_gravity="center"
            android:layout_height="50dp"
            android:src="@drawable/nhunglon" />
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_width="0dp"
            android:layout_height="60dp">
            <LinearLayout
                android:layout_marginTop="@dimen/_7sdp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:id="@+id/name_mess"
                    android:text="Trần Y"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_status"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp" />
            </LinearLayout>
            <TextView
                android:textSize="14sp"
                android:layout_weight="1"
                android:id="@+id/message"
                android:text="Nam: Thèm cứt nà"
                android:layout_width="match_parent"
                android:layout_height="30dp"/>

        </LinearLayout>
    <LinearLayout
        android:paddingLeft="15dp"
        android:orientation="vertical"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="60dp">
        <TextView
            android:gravity="right"
            android:id="@+id/time"
            android:textStyle="bold"
            android:layout_weight="1"
            android:text="21/12/2020"
            android:layout_width="90dp"
            android:layout_height="30dp"/>
        <TextView
            android:id="@+id/soluong"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="60dp"
            android:backgroundTint="#f9524c"
            android:textColor="#FDFDFD"
            android:background="@drawable/custom_txt"
            android:gravity="center"
            android:layout_weight="1"
            android:text="2"
            android:layout_width="25dp"
            android:layout_height="15dp"/>

    </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="80dp"
        android:background="#72000000"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</LinearLayout>